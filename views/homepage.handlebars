{{>hero}}

<div class="block max-w-l m-1 p-6 bg-white border-t-8 border-gray-200 shadow-md dark:bg-gray-800 dark:border-green-700">
    <h5 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white">Posts by users</h5> </a>
</div>

<div class="posts">
    {{#each posts}}
    <a href="/post/{{Post.id}}" class="block max-w-l m-1 p-6 bg-white border-t-8 border-gray-200 rounded-lg shadow-md hover:bg-gray-100 dark:bg-gray-800 dark:border-green-700 dark:hover:bg-gray-700">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{Post.title}}</h5> </a>
        <h6 class="font-bold text-gray-700 dark:text-green-600">Posted by: {{User.username}} on {{format_date createdAt}}</h6>
        <p class="font-normal text-gray-700 dark:text-gray-300">{{Post.description}}</p>
    {{/each}}
</div>