{{>hero}}

<div class="block max-w-l p-6">
    <h5 class="text-3xl font-bold text-underline tracking-tight text-gray-900 dark:text-white">Posts by our users</h5> </a>
</div>

<div class="posts">
    {{#each posts as |post|}}
    <a href="/post/{{post.id}}" class="block  mb-4 ml-4 mr-4 max-w-l p-6 bg-white border-t-8 border-gray-200 rounded-lg shadow-md hover:bg-gray-100 dark:bg-gray-800 dark:border-green-700 dark:hover:bg-gray-700">
        <h5 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{post.title}}</h5>
        <p class="mb-2 text-sm text-gray-700 dark:text-green-600">Posted by: {{post.user.username}} on {{format_date post.date_created}}</p>
        <p class="text-gray-700 dark:text-gray-300">{{post.description}}</p>  
    </a>
    {{/each}}
</div>